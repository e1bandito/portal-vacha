+b.HEADER.header
  .container
    +e.inner
      +e.top
        if pageTitle === 'main'
          +e.A.logo
            img(src="img/logo.svg" alt="Новостной портал Вачского района")
            span Новостной портал <br> Вачского района/
        else
          +e.A.logo(href="/index.html")
            img(src="img/logo.svg" alt="Новостной портал Вачского района")
            span Новостной портал <br> Вачского района/
        +e.controls
          +e.BUTTON.search
            +icon('search')(width="24", height="24")
          include ../../components/burger/burger
      +e.bottom
        include ../../components/nav/nav
